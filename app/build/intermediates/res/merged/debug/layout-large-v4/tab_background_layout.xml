<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/tabsLayout" android:layout_width="fill_parent"
	    android:divider="@drawable/ic_tab_divider"
	    android:layout_height="fill_parent" android:background="@drawable/ic_tab_background"
	    android:padding="10dip" android:orientation="vertical" android:gravity="center|top" android:paddingTop="0dp">
		<FrameLayout android:layout_height="wrap_content" android:id="@+id/tabFrameLayout" android:layout_width="wrap_content" >
			<ImageView android:layout_width="wrap_content" android:src="@android:drawable/dialog_frame" android:id="@+id/tabImageView" android:layout_height="fill_parent"></ImageView>
		</FrameLayout>
	    <TextView android:id="@+id/tabsText" android:layout_width="wrap_content"
	        android:layout_height="wrap_content" android:text="Title" android:textColor="@drawable/ic_tab_text"
	        android:shadowColor="#000000"  
       		android:shadowRadius="2.5"  
        	android:shadowDx="2.0"  
        	android:shadowDy="2.0" android:textSize="15dip"/>
	</LinearLayout>